---
layout: layouts/base.njk
title: Cooking
---
<h1 class="text-3xl font-bold text-accent mb-4">Cooking</h1>
<div id="tag-filter" class="mb-6"></div>
<ul id="recipe-list">
{% for item in collections.recipes %}
  {% if item.data.section == "Cooking" %}
    <li data-tags="{{ item.data.tags | join(',') }}">
      <a href="{{ item.url }}" class="card mb-4 block">
        {{ item.data.title }}
        {% if item.data.tags %}
          <span class="ml-2 text-xs text-gray-500">({{ item.data.tags | join(', ') }})</span>
        {% endif %}
      </a>
    </li>
  {% endif %}
{% endfor %}
</ul>
<script>
const recipes = Array.from(document.querySelectorAll('#recipe-list li'));
const allTags = Array.from(new Set(recipes.flatMap(li => (li.dataset.tags||'').split(',').map(t=>t.trim()).filter(Boolean))));
if (allTags.length > 0) {
  const filterDiv = document.getElementById('tag-filter');
  filterDiv.innerHTML = '<span class="mr-2">Filter:</span>' + allTags.map(tag => `<button class="px-2 py-1 rounded bg-gray-100 hover:bg-accent hover:text-white text-xs mr-2 mb-2" data-tag="${tag}">${tag}</button>`).join('');
  filterDiv.addEventListener('click', e => {
    if (e.target.dataset.tag) {
      const tag = e.target.dataset.tag;
      recipes.forEach(li => {
        li.style.display = li.dataset.tags.includes(tag) ? '' : 'none';
      });
    }
  });
}
</script>
